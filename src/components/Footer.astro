---
import BaseLink from './BaseLink.astro';
import { footerSitemap } from '../data/navigation'; // <-- IMPORTING FROM OUR SINGLE SOURCE OF TRUTH

const year = new Date().getFullYear();
---
<footer class="bg-slate-100 dark:bg-slate-800 border-t border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400">
    <div class="container mx-auto px-4 py-12">
        <!-- Sitemap Grid is now generated automatically -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left">
            {footerSitemap.map(column => (
                <div>
                    <h3 class="font-bold text-slate-900 dark:text-slate-200 uppercase tracking-wider mb-4">{column.title}</h3>
                    <ul class="space-y-2">
                        {column.links.map(link => (
                            <li>
                                {link.isExternal ? (
                                    <a href={link.href} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 hover:underline">{link.text}</a>
                                ) : (
                                    <BaseLink href={link.href} class="hover:text-blue-600 dark:hover:text-blue-400 hover:underline">{link.text}</BaseLink>
                                )}
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>

        <!-- Copyright section -->
        <div class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-700 text-center text-sm">
            <p>Â© {year} kairin. All rights reserved. This site is part of the <a href="https://github.com/kairin/google-gemini-codes" target="_blank" class="font-semibold text-slate-700 dark:text-slate-300 hover:underline">google-gemini-codes</a> repository.</p>
        </div>
    </div>
</footer>
<style>
  footer {
    background-color: #333;
    color: white;
    padding: 1rem;
    text-align: center;
    margin-top: 2rem;
  }
</style>
