---
import BaseLink from './BaseLink.astro';

// href is optional.
interface Props {
  title: string;
  href?: string;
  icon: string;
}
const { title, href, icon } = Astro.props;

// If an href is passed, the card is a link. Otherwise, it's a div.
const Tag = href ? BaseLink : 'div';
---
<Tag href={href} class:list={["group block bg-white dark:bg-slate-800 p-6 rounded-lg shadow-md hover:shadow-xl dark:hover:shadow-blue-900/20 transition-all duration-300 border border-slate-200 dark:border-slate-700 h-full flex flex-col", { 'cursor-default': !href }]}>
    <div class="flex items-center mb-4">
        <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-lg bg-blue-100 dark:bg-slate-700 text-blue-600 dark:text-blue-400 transition-colors group-hover:bg-blue-600 group-hover:text-white dark:group-hover:bg-blue-500">
            <i class:list={[icon, "fa-lg"]}></i>
        </div>
        <h3 class="ml-4 text-xl font-bold text-slate-900 dark:text-slate-100">{title}</h3>
    </div>
    
    <!-- The main content (blurb) goes here. flex-grow makes it take up available space. -->
    <div class="text-slate-600 dark:text-slate-400 flex-grow">
        <slot />
    </div>

    <!-- The "Explore" link only appears if an href is provided. -->
    {href && (
        <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700 font-semibold text-blue-600 dark:text-blue-400 group-hover:underline">
            Explore <i class="fa-solid fa-arrow-right ml-1"></i>
        </div>
    )}
</Tag>
