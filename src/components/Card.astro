---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
}
const { title, description, href, icon } = Astro.props;
---
<a href={href} class="group block bg-white p-6 rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300 border border-gray-200">
    <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-blue-100 text-blue-600 mb-4 transition-colors group-hover:bg-blue-600 group-hover:text-white">
        <i class:list={[icon, "fa-lg"]}></i>
    </div>
    <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600">{description}</p>
    <div class="mt-4 font-semibold text-blue-600 group-hover:underline">
        Explore <i class="fa-solid fa-arrow-right ml-1"></i>
    </div>
</a>
