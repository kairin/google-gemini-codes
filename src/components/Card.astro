// FILE: src/components/Card.astro
// This is the definitive Card component that implements all requested hover effects.
// The entire component is wrapped in an `<a>` tag to ensure it is a single, working link.
// Tailwind's `group-hover` utility is used to control all child element animations.

---
interface Props {
  href: string;
  icon: string;
  title: string;
  blurb: string;
  details?: string;
  isExternal?: boolean;
}

const { href, icon, title, blurb, details, isExternal = false } = Astro.props;
---
<a
  href={href}
  target={isExternal ? '_blank' : '_self'}
  rel={isExternal ? 'noopener noreferrer' : ''}
  class="group block relative h-full bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-xl focus:shadow-xl transition-all duration-300 ease-in-out hover:scale-105"
>
  <!-- Animated Border: Appears on hover -->
  <div class="absolute inset-0 rounded-lg overflow-hidden z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="animate-rainbow-border h-full w-full"></div>
  </div>

  <!-- Content Layer -->
  <div class="relative z-0 p-8">
    <!-- Icon: Scales up on hover -->
    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900/50 mb-5 transition-transform duration-300 group-hover:scale-110">
      <i class:list={[icon, "text-3xl text-blue-600 dark:text-blue-300"]}></i>
    </div>
    <h3 class="mb-2 text-xl font-bold text-gray-800 dark:text-slate-100">{title}</h3>
    
    <!-- Text swapping container -->
    <div class="relative min-h-[6rem]">
      <!-- Short blurb, visible by default, disappears on hover -->
      <p class:list={["absolute inset-0 text-gray-600 dark:text-slate-400 transition-opacity duration-200", { 'group-hover:opacity-0': details }]}>
        {blurb}
      </p>
      <!-- Detailed text, hidden by default, appears on hover -->
      {details && (
        <p class="text-gray-600 dark:text-slate-300 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
          {details}
        </p>
      )}
    </div>
  </div>
</a>
