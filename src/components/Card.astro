---
interface Props {
  href: string;
  icon: string;
  title: string;
  blurb: string;
  isExternal?: boolean;
}
const { href, icon, title, blurb, isExternal = false } = Astro.props;
---
<a
  href={href}
  target={isExternal ? '_blank' : '_self'}
  rel={isExternal ? 'noopener noreferrer' : ''}
  class="group block relative h-full bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-xl focus:shadow-xl transition-all duration-300 ease-in-out hover:!scale-105"
>
  <!-- Content Layer: Visible by default, disappears on hover -->
  <div class="relative z-10 p-8 transition-opacity duration-300 group-hover:opacity-0">
    <div class="flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900/50 mb-5 transition-transform duration-300 group-hover:scale-125">
      <i class:list={[icon, "text-3xl text-blue-600 dark:text-blue-300"]}></i>
    </div>
    <h3 class="mb-2 text-xl font-bold text-gray-800 dark:text-slate-100">{title}</h3>
    <p class="text-gray-600 dark:text-slate-400">{blurb}</p>
  </div>

  <!-- Animated Gradient Layer: Hidden by default, appears on hover -->
  <div class="absolute inset-0 z-0 rounded-lg transition-opacity duration-300 opacity-0 group-hover:opacity-100 animate-rainbow-fill-once">
  </div>
</a>
