---
interface Props {
  href: string;
  icon: string;
  title: string;
  blurb: string;
}
const { href, icon, title, blurb } = Astro.props;
---
<a href={href} class="block p-6 bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-xl focus:shadow-xl transition-shadow duration-300 animate-rainbow-border group">
    <div class="flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 dark:bg-blue-900/50 mb-4 group-hover:scale-110 transition-transform">
        <i class:list={[icon, "text-2xl text-blue-600 dark:text-blue-300"]}></i>
    </div>
    <h3 class="mb-2 text-xl font-bold text-gray-800 dark:text-slate-100">{title}</h3>
    <p class="text-gray-600 dark:text-slate-400">{blurb}</p>
</a>
