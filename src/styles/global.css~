@import "tailwindcss";

/*
 This file contains global styles and animations used across the site.
*/

/* 1. Define the CSS Variables for our gradients at the root level */
:root {
    --rainbow-gradient: linear-gradient(
        to right,
        #ef4444, /* red-500 */
        #f97316, /* orange-500 */
        #eab308, /* yellow-500 */
        #22c55e, /* green-500 */
        #3b82f6, /* blue-500 */
        #8b5cf6, /* violet-500 */
        #ef4444  /* red-500 again to complete the loop */
    );
    --greyscale-shimmer-gradient: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent
    );
}

/* 2. Define the Keyframes for the scrolling animation */
@keyframes rainbow-scroll-animation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* 3. Define the Utility Classes that your React components apply */

/* For the animated border */
.animate-rainbow-border {
    border: 2px solid transparent;
    background-image: linear-gradient(white, white), var(--rainbow-gradient);
    background-origin: border-box;
    background-clip: padding-box, border-box;
    animation: rainbow-scroll-animation 3s linear infinite;
    background-size: 200% 100%;
}

.dark .animate-rainbow-border {
    background-image: linear-gradient(#1e293b, #1e293b), var(--rainbow-gradient); /* slate-900 */
}

/* For the faint background shimmer */
.animate-rainbow-bg-shimmer {
    position: relative;
    overflow: hidden;
}

.animate-rainbow-bg-shimmer::before {
    content: '';
    position: absolute;
    top: 0;
    left: -150%;
    width: 75%;
    height: 100%;
    background-image: var(--greyscale-shimmer-gradient);
    transform: skewX(-25deg);
    animation: rainbow-scroll-animation 5s linear infinite;
    opacity: 0.5;
}

/* For the text shimmer (not currently used but good to have) */
.animate-rainbow-text-shimmer {
    background-image: var(--rainbow-gradient);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: rainbow-scroll-animation 3s linear infinite;
}
