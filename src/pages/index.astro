---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import { homepageCards } from '../data/navigation'; // <-- IMPORTING THE CARD DATA
---
<BaseLayout title="Homepage" description="A collection of projects and analyses on data and web technologies.">
    <header class="text-center my-12 md:my-20">
        <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 dark:text-slate-100 tracking-tight">
            Google Gemini Codes
        </h1>
        <p class="mt-4 text-lg md:text-xl text-gray-600 dark:text-slate-300 max-w-3xl mx-auto">
            A curated collection of projects exploring modern solutions for data analysis, web deployment, secure networking, and computational history.
        </p>
    </header>

    <!-- This grid is now generated automatically from our single source of truth -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {homepageCards.map(card => (
            <Card href={card.href} icon={card.icon} title={card.title}>
                <p>{card.blurb}</p>
            </Card>
        ))}
    </div>
</BaseLayout>
