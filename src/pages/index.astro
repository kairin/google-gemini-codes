---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Card from '@/components/Card.astro';
import { homepageCards } from '@/data/navigation.ts';
---
<BaseLayout 
    title="Home | Google Gemini Codes" 
    description="A curated collection of projects and analyses showcasing modern solutions for common data and web challenges."
>
    <!-- Hero Section -->
    <section class="text-center py-16 md:py-24">
        <h1 class="text-5xl md:text-6xl font-extrabold text-gray-800 dark:text-slate-100 animate-rainbow-text-shimmer">
            Google Gemini Codes
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-lg md:text-xl text-gray-600 dark:text-slate-300">
            A curated collection of projects and analyses showcasing modern, AI-assisted solutions for common data and web challenges.
        </p>
    </section>

    <!-- Cards Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- 
            This loop now correctly passes the `blurb` property from your data file 
            to the `Card` component, which will render the missing text.
        -->
        {homepageCards.map(card => (
            <Card 
                href={card.href}
                icon={card.icon}
                title={card.title}
                blurb={card.blurb}
            />
        ))}
    </div>
</BaseLayout>
