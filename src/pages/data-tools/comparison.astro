---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContentHeader from '@/components/ContentHeader.astro';
import BaseLink from '@/components/BaseLink.astro';
---
<BaseLayout
    title="Tool Comparison | Data Tool Analyzer"
    description="A side-by-side comparison of Power Query, DuckDB, and GraphRAG."
>
    <ContentHeader
        title="Feature Showdown"
        description="A side-by-side comparison of Power Query, DuckDB, and GraphRAG across key dimensions."
    />

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Feature
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Power Query
                    </th>
                    <th scope="col" class="px-6 py-3">
                        DuckDB
                    </th>
                    <th scope="col" class="px-6 py-3">
                        GraphRAG
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        Primary Use Case
                    </th>
                    <td class="px-6 py-4">
                        Self-service BI & ETL
                    </td>
                    <td class="px-6 py-4">
                        Fast analytical SQL
                    </td>
                    <td class="px-6 py-4">
                        Context-aware Q&A
                    </td>
                </tr>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        Ease of Use
                    </th>
                    <td class="px-6 py-4">
                        Very High (GUI-based)
                    </td>
                    <td class="px-6 py-4">
                        High (for SQL users)
                    </td>
                    <td class="px-6 py-4">
                        Low (Complex framework)
                    </td>
                </tr>
                <tr class="bg-white dark:bg-gray-800">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        Typical User
                    </th>
                    <td class="px-6 py-4">
                        Business Analyst
                    </td>
                    <td class="px-6 py-4">
                        Data Scientist / Engineer
                    </td>
                    <td class="px-6 py-4">
                        AI/ML Engineer
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-16">
        <BaseLink href="/data-tools/" text="Back to Analyzer" style="secondary" icon="fa-solid fa-arrow-left" />
    </div>
</BaseLayout>
