---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Modal from '../../components/Modal.astro';
---
<BaseLayout title="Unveiling Ancient Sophistication" description="Islamic Architecture and Modern Science">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f7f4;
        color: #1f2937;
      }
      .nav-link {
        transition: color 0.3s, border-bottom-color 0.3s;
        border-bottom: 2px solid transparent;
      }
      .nav-link:hover, .nav-link.active {
        color: #3b82f6;
        border-bottom-color: #3b82f6;
      }
      .section-title {
        color: #111827;
      }
      .card {
        background-color: #ffffff;
        border: 1px solid #e5e7eb;
        transition: transform 0.3s, box-shadow 0.3s;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      }
      .chart-container {
        position: relative;
        width: 100%;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        height: 300px;
        max-height: 400px;
      }
      @media (min-width: 768px) {
        .chart-container {
          height: 400px;
        }
      }
      .interactive-canvas {
        cursor: pointer;
        border: 1px solid #d1d5db;
      }
    </style>
  </head>
  <body class="antialiased">
    <main>
      <!-- Content sections and canvas elements go here. You can reuse your existing HTML here within the Astro layout. -->

      <!-- Just add your interactive HTML blocks below. Extract canvas logic to a .js file if needed and include with <script type="module"> -->
    </main>

    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto px-6 text-center">
        <p>An interactive exploration based on the report "Unveiling Ancient Sophistication."</p>
      </div>
    </footer>

    <script type="module" src="/google-gemini-codes/scripts/interactive.js"></script>
  </body>
</BaseLayout>
