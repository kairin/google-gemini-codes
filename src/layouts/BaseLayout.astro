---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title, description } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Google Gemini Codes</title>
    <meta name="description" content={description} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Basic prose styling for articles, since we're not installing plugins yet */
        .prose h1, .prose h2, .prose h3 { @apply font-bold text-gray-800 my-4; }
        .prose h1 { @apply text-3xl md:text-4xl; }
        .prose h2 { @apply text-2xl md:text-3xl border-b pb-2; }
        .prose h3 { @apply text-xl md:text-2xl; }
        .prose p, .prose ul, .prose ol { @apply text-gray-700 leading-relaxed my-4; }
        .prose a { @apply text-blue-600 hover:underline; }
        .prose code { @apply bg-gray-200 text-gray-800 rounded px-1.5 py-1 text-sm font-mono; }
        .prose pre { @apply bg-gray-800 text-white rounded-lg p-4 overflow-x-auto; }
        .prose pre code { @apply bg-transparent text-white p-0; }
        .prose ul { @apply list-disc list-inside; }
    </style>
</head>
<body class="bg-gray-50 text-gray-800 font-sans antialiased">
    <Header />
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-[calc(100vh-15rem)]">
        <slot />
    </main>
    <Footer />
</body>
</html>
